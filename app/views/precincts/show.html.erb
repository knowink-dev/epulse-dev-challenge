<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <ul class="list-group">
      <li class="list-group-item">Precinct Info</li>
      <li class="list-group-item"><%= @precinct.name %></li>
      <li class="list-group-item"><%= @precinct.voter_tabulation_district %> <%= @precinct.state_senate %> / <%= @precinct.state_house %></li>
    </ul>

    <%= link_to 'Edit this precinct', edit_precinct_path(@precinct), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Delete this precinct', precinct_path(@precinct), method: :delete, data: { confirm: "Are you sure you want to delete this precinct?" }, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to 'Back to precincts', precincts_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
