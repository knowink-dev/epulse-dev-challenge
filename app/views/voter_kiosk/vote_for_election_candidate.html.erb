<div class="container">
  <div class="row">
    <div class="col-md-3">

    </div>
    <div class="col-md-6">
      <h3 class="text-center"><%= @election.election_title %></h3>
      <hr>
      <div class="card-deck">
        <% @election.election_candidate_enrollments.each do |ece| %>
          <div class="p-2">
            <div class="card" style="width: 18rem;">
              <div class="card-body">
                <div class="text-center">
                  <%= fa_icon("user", class: 'fa-4x') %>
                </div>
                <hr>
                <h5 class="card-title"><%= ece.election_candidate.full_name %></h5>
                <h6 class="card-subtitle mb-2 text-muted">Party Affiliation | <%= ece.election_candidate.party %></h6>
                <p class="card-text">Gender: <%= ece.election_candidate.gender %></p>
                 <%= link_to 'VOTE', create_vote_path(election_candidate_id: ece.election_candidate.id, voter_id: @voter.id, election_id: @election.id), class: 'btn btn-block btn-info'  %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-md-3">

    </div>
  </div>
</div>
